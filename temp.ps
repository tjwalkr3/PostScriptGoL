/gameOfLife { % gridArray (the array of cells), pageSize (side length) -- 
    /newBoard [pageSize { [pageSize { 0 } repeat]} repeat] def

    0 1 pageSize 1 sub {  % Iterate over rows (y-axis)
        /row exch def
        0 1 pageSize 1 sub {  % Iterate over columns (x-axis)
            /col exch def
            /neighborCount row col countNeighbors def
            /currentCell sampleGrid row get col get def
            /status neighborCount currentCell liveOrDie def

            status {
                newBoard row get 1 col put
            } {
                newBoard row get 0 col put
            } ifelse
        } for
    } for

    /sampleGrid drawGrid def
} def